.app-search{
  .filter{
    display inline-block
    vertical-align top
  }

  .f-select {
    width 18%
    margin-right 2%

  }
  .f-action{
    width 12%
    padding 6px 15px
    font-size 16px
    border 2px solid white
    color white
    background-color transparent
    &:hover{
      background-color lighten(#0080b7, 10%) !important
    }
  }
  .f-input{
    width 46%
    &.company-search{
      width 86%
    }
    margin-right 2%
  }
}
.app-main-search{
  background-color lighten(#0091cf, 20%)
  .wrapper{
    padding 50px 0
  }
  .search-wrapper{
    padding 25px 20px 20px 20px
    background-color #0080b7
    border-radius 0 4px 4px 4px
  }
  .navigations{
    .nav-item{
      font-weight 550
      &.active{
        background-color #0080b7
        color white
      }
      background-color white
      border-radius  4px 4px 0 0
      color #1a1a1a
      text-align center
      padding 8px 16px
      font-size 15px
      cursor pointer
      margin-right 5px
      &:hover{
        background-color #0080b7
        color white
      }
      display inline-block
    }
  }
}