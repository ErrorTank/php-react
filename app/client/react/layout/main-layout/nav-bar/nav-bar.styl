.nav-bar {
  width 100%
  z-index 3
  background-color #0091cf
  color #6c757e
  box-shadow: 0 1px 4px #C9C9C9

  .brand {
    cursor pointer
    color white
    .box {
      padding 0 8px
      margin-left 6px
      border-radius 4px
      background-color white
      color  #0091cf
    }

    img {
      height 50px
      vertical-align middle
    }

    span {
      font-size lg - 0.2rem
      font-family: 'Roboto', sans-serif;
      font-weight bold
      display inline-block
      vertical-align middle
    }
  }

  .wrapper {
    display flex
    align-items center
    justify-content space-between

    .navs {
      display flex

      .sign-out {
        border-top 1px solid grey
        padding-top 15px

        button {
          width 100%
          display block
          font-size 13px
          padding 5px
          color white
          background-color #3498db
        }
      }

      .each-nav {
        padding 18px 20px
        cursor pointer
        transition all 0.1s ease
        position relative
        font-size 14px
        height 100%
        font-weight 550
        color white
        .full-name {
          max-width 100px
          white-space nowrap
          margin-right 6px
          display inline
        }

        i {
          display inline-block
          vertical-align baseline
        }

        .dropdown-panel {
          position absolute
          background-color white
          left 0
          border-radius 0 0 3px 3px
          width 220px
          padding 14px 0

          box-shadow: 0px 1px 10px #B5B5B5

          .dropdownItem {
            padding 10px 0
            padding-left 18px
            padding-right 10px
            color #6c757e
            font-size 13px

            &:hover {
              color tikiblue
            }

            &.active {
              color #0091cf
            }
          }
        }
        position relative

        .acc-icon {
          margin-right 4px
        }

        &.active {
          background-color darken( #0091cf, 12%)

        }

        &:hover {
          background-color darken( #0091cf, 12%)
        }
      }
    }

  }
}