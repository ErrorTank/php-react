
.candidate-details-route{
  .route-wrapper{
    padding 30px 0

    .j-body
    .j-footer
    {
      margin-right 2%
      padding 20px
      margin-bottom 20px
      background-color white
      border-radius 3px
      .section{
        margin-bottom 20px
        .content{
          &.contact{
            .row{
              margin-bottom 5px !important
            }
            .label{
              color rgb(74, 74, 74);
              font-weight 550
              font-size 14px


            }
            .value{
              color rgb(74, 74, 74);
              font-weight 400
              font-size 14px
            }
          }
          &.text-content{
            font-size 14px
            color rgb(74, 74, 74);
            white-space pre-wrap
          }
          .item{
            margin-top 5px
            .label{
              color rgb(74, 74, 74);
              font-weight 550
              font-size 14px
              margin-right 6px

            }
            .value{
              color rgb(74, 74, 74);
              font-weight 400
              font-size 14px
            }
          }
        }
      }
    }
    .j-header{

      margin-bottom 20px !important
      background-color white
      border-radius 3px
      position relative
      .avatar{
        width 140px
        position absolute
        height 140px
        z-index 2
        top 50%
        left 20px
        transform translateY(-50%)

        .img-wrapper{
          width 100%
          height 100%
          position relative
          border 2px solid white
          border-radius 50%
          overflow hidden
          img{
            position absolute
            top 50%
            left 50%
            max-width 100%
            transform translate(-50%, -50%)

          }
        }
      }
      .upper{
        padding-left 180px
        height 100px
        display flex
        justify-content center
        position relative
        flex-direction column
        background-color #0091cf
        i{
          position absolute
          right 20px
          top 20px
          cursor pointer
        }
        .name{

          font-size 22px
          color white
          font-weight bold
          vertical-align bottom
        }
        .label{

          font-size 20px
          color #ffe14f
          font-weight 550
        }
      }
      .below{
        height 100px
        padding-left 180px
        .value{
          font-size 14px
          color #1a1a1a
          margin-left 6px

        }
        i{
          color #0091cf
          font-size 20px

          &.fa-venus{
            color #f263d1
          }

        }
      }


    }
  }
}